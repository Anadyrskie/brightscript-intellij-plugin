<idea-plugin>
    <id>com.interfaced.brs-plugin</id>
    <name>BrightScript</name>
    <vendor email="reefridge@ifaced.ru" url="http://interfaced.tv">Interfaced</vendor>

    <description><![CDATA[
    BrightScript language support.
    ]]></description>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="com.interfaced.brs.lang.BSFileTypeFactory"/>
        <lang.parserDefinition language="BrightScript" implementationClass="com.interfaced.brs.lang.parser.BSParserDefinition"/>
    </extensions>
</idea-plugin>